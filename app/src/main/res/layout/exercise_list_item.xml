<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="130dip"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#eee"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/exerItemDbCheckLay"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#c4c3c3">

            <ImageView
                android:id="@+id/exerItemDoneImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/exerc_undone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_toRightOf="@id/exerItemDbCheckLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="77dp">

            <ImageView
                android:id="@+id/exerItemThumbImg"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@drawable/cat_im"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/exerItemNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ΣΑΝΙΔΑ"
                android:layout_toRightOf="@id/exerItemThumbImg"
                android:layout_toLeftOf="@id/exerItemProccedBtn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#222"
                android:textSize="17sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <Button
                android:id="@+id/exerItemProccedBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/category_next"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exerItemLevelLay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#000">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/levelIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/level"/>
                <TextView
                    android:id="@+id/exerItemLevelText"
                    android:layout_toRightOf="@+id/levelIcon"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Easy"
                    android:textSize="18sp"
                    android:textColor="#fff"/>
            </RelativeLayout>

        </RelativeLayout>

        </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>