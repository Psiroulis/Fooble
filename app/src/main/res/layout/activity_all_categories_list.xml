<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllCategoriesActivity"
    android:background="#0A1128">

    <RelativeLayout
        android:id="@+id/listTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3560dd"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_arrow"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/titleAgeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="ΚΑΤΗΓΟΡΙΕΣ ΑΣΚΗΣΕΩΝ"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cat_recycleview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/listTitleLayout"/>



    <RelativeLayout
        android:id="@+id/catListLoadingLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0A1128"
            android:alpha="0.9">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lgoim"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading Content..."
                android:textColor="#fff"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/lgoim"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>