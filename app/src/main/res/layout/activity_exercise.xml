<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleExerciseActivity"
    android:background="@drawable/bgappbasic">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <TextView
            android:id="@+id/exerciceTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ΣΑΝΙΔΑ"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textColor="#FFF"/>
    </RelativeLayout>

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:layout_below="@id/titleLayout"
        android:layout_above="@id/singleExercDoneButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <ToggleButton
        android:id="@+id/singleExercDoneButton"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:textOn="Undone"
        android:textOff="Done"
        android:checked="false"
        android:background="@drawable/done_button_selector"
        android:textColor="#fff"
        android:textSize="16sp"/>








</RelativeLayout>

