<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleExerciseActivity"
    android:background="@drawable/bgappbasic">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/exerciceTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textColor="#FFF"/>
    </RelativeLayout>

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:layout_below="@id/titleLayout"
        android:layout_above="@+id/singleExercDoneButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ToggleButton
        android:id="@+id/singleExercDoneButton"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:textOn="Uncompleted"
        android:textOff="Completed"
        android:checked="false"
        android:background="@drawable/done_button_selector"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <RelativeLayout
        android:id="@+id/singleExercLoginLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgappbasic">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lgoim"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading ..."
                android:textColor="#fff"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/lgoim"/>
        </RelativeLayout>
    </RelativeLayout>





</RelativeLayout>

