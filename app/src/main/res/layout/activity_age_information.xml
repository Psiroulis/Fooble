<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgeInformation"
    android:background="#0A1128">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#3560dd">

        <TextView
            android:id="@+id/titleAgeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="ΗΛΙΚΙΑΚΟ GROUP 8-10 ΕΤΩΝ"
            android:textSize="20sp"
            android:textColor="#fff"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/mainTextInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="inherit"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:textSize="19sp"
        android:justificationMode="inter_word"
        android:text="@string/info_1112"/>

    <Button
        android:id="@+id/infoNextButton"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:text="@string/go_next"
        android:textColor="#fff"
        android:background="@drawable/blue_button_back"
        android:layout_margin="10dp"/>

</RelativeLayout>